# Directory of the Jetty home directory (used to place the war file)
jetty.dir /mypath/jetty-6.1.22

# boolean to use the SIP Database (true/false)
useSipDatabase true

#Database: Derby
database.driverClassName org.apache.derby.jdbc.EmbeddedDriver
database.embeddedDriver true
database.url jdbc:derby:
database.create true

